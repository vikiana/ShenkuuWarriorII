package virtualworlds.helper.SoundHelperClasses{	import flash.events.Event;	import flash.display.Loader;		public class SoundEvent extends Event	{				// dispatched when all items are loaded		public static const ALLITEMSLOADED:String = "allItemsLoaded"		// dispatched when a single item loaded		public static const ITEMLOADED:String = "itemLoaded"		// displated as a single items kb's are loadin brother		public static const ITEMPROGRESS:String = "itemProgress"				// the item being loaded - a swf usually		public var loadedItem:*		// the about of items loaded		public var amountLoaded:uint		// the total amount of items		public var amountTotal:uint						public function SoundEvent(aEventType:String, aItem:* = null, loaded:uint = 0, total:uint = 0)		{			loadedItem = aItem			amountLoaded = loaded			amountTotal = total						super(aEventType)		}	}}